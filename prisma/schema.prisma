// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Example {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? @db.Text
    access_token      String? @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model StaticProsthesis {
    id String @id @default(cuid())

    // custom id used in physical world
    workId         String
    technicianNote String

    doctorId String
    doctor   Doctor @relation(fields: [doctorId], references: [id])

    type        StaticCrownType
    patientName String
    color       TeethColor[] // array of colors

    // 1 - 8 teeth on the upper-right jaw  
    tooth_11 TeethConstruction
    tooth_12 TeethConstruction
    tooth_13 TeethConstruction
    tooth_14 TeethConstruction
    tooth_15 TeethConstruction
    tooth_16 TeethConstruction
    tooth_17 TeethConstruction
    tooth_18 TeethConstruction

    // 1-8 teeth on the upper-left jaw
    tooth_21 TeethConstruction
    tooth_22 TeethConstruction
    tooth_23 TeethConstruction
    tooth_24 TeethConstruction
    tooth_25 TeethConstruction
    tooth_26 TeethConstruction
    tooth_27 TeethConstruction
    tooth_28 TeethConstruction

    // 1-8 teeth on the lower-right jaw
    tooth_31 TeethConstruction
    tooth_32 TeethConstruction
    tooth_33 TeethConstruction
    tooth_34 TeethConstruction
    tooth_35 TeethConstruction
    tooth_36 TeethConstruction
    tooth_37 TeethConstruction
    tooth_38 TeethConstruction

    // 1-8 teeth on the lower-left jaw
    tooth_41 TeethConstruction
    tooth_42 TeethConstruction
    tooth_43 TeethConstruction
    tooth_44 TeethConstruction
    tooth_45 TeethConstruction
    tooth_46 TeethConstruction
    tooth_47 TeethConstruction
    tooth_48 TeethConstruction

    isCompleted Boolean   @default(false)
    completedAt DateTime?
    isPaid      Boolean   @default(false)
    paidAt      DateTime?

    // set default value to current year 
    // i.e. 2023
    creationYear Int      @default(dbgenerated("date_part('year', CURRENT_DATE)"))
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    @@unique([creationYear, workId])
}

model Doctor {
    id String @id @default(cuid())

    name    String
    address String?
    phone   String?

    // billNumber String @default("unset")

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    StaticProsthesis StaticProsthesis[]
}

enum StaticCrownType {
    METAL_CERAMIC

    EMAX_LAMINATE
    EMAX_ON_ZIRCONIA

    MARYLAND_CERAMIC_BRIDGE

    TEMPORARY_CROWN

    FULL_METAL_CROWN
    PIVOT_METAL
    ZIRCONIA_CROWN
}

enum TeethConstruction {
    CROWN
    BRIDGE
    INLAY
    ONLAY
}

